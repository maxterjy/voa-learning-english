<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".audioplayer.AudioPlayFragment">

        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:gravity="center"
                android:layout_marginTop="16dp"/>

        <SeekBar
                android:id="@+id/bar_playback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

        <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="00:00"/>

            <Button
                    android:id="@+id/btn_skip_backward"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_skip_backward"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btn_play"/>

            <Button
                    android:id="@+id/btn_play"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_play"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"/>

            <Button
                    android:id="@+id/btn_skip_forward"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_skip_forward"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/btn_play"/>/>

            <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="00:00"/>

        </RelativeLayout>

    </LinearLayout>
</layout>